<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:orientation="horizontal"
        android:paddingHorizontal="23dp">
        <ImageView
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:src="@drawable/safe"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="23dp"
            android:paddingTop="23dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Safe"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:orientation="horizontal"
        android:paddingHorizontal="23dp"
        android:background="@drawable/top_bottom_border">
        <ImageView
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:src="@drawable/cut_back"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="23dp"
            android:paddingTop="23dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cut Back"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Not toxic, but large amounts may be unsafe."/>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:orientation="horizontal"
        android:paddingHorizontal="23dp">
        <ImageView
            android:id="@+id/yourListItemImg"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:src="@drawable/avoid_symbol"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="23dp"
            android:paddingTop="23dp">
            <TextView
                android:id="@+id/yourListItemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Avoid"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/yourListItemQuantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Unsafe or is poorly tested and not worth any risk."/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:orientation="horizontal"
        android:paddingHorizontal="23dp">
        <ImageView
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:src="@drawable/no_data_available_symbol"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="23dp"
            android:paddingTop="23dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No Data Available"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We don't have information about this additive in our database."/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>