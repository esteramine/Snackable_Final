<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:orientation="horizontal"
    android:paddingHorizontal="23dp"
    android:background="@drawable/top_bottom_border">
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="true"
        android:layout_gravity="center_vertical">
        <ImageView
            android:id="@+id/yourListItemImg"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:src="@drawable/not_found"
            android:layout_gravity="center"/>
    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="23dp"
            android:paddingTop="23dp">
            <TextView
                android:id="@+id/yourListItemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kinder Maxi"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/yourListItemQuantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="50g"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp">
            <ImageView
                android:id="@+id/yourListItemSavedImg"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_history"/>
            <TextView
                android:id="@+id/yourListItemSavedTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5 mins ago"/>
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>